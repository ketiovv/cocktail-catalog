<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".View.DrinkDetailsFragment"
    android:background="#3F403D">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">


        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="35dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDrinkNameD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonBack"
            app:layout_constraintTop_toBottomOf="@+id/buttonBack" />

        <ImageButton
            android:id="@+id/buttonAddToFavorites"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_baseline_favorite_border_24_kici"
            app:layout_constraintStart_toStartOf="@+id/textViewDrinkNameD"
            app:layout_constraintTop_toBottomOf="@+id/textViewDrinkNameD" />

        <TextView
            android:id="@+id/textViewAddToFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="@string/add_to_favorite"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/buttonAddToFavorites"
            app:layout_constraintTop_toTopOf="@+id/buttonAddToFavorites" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito"
            android:text="@string/ingredients"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textViewIngredientsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="@+id/buttonAddToFavorites"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddToFavorites" />

        <TextView
            android:id="@+id/textViewInstructions"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewIngredientsList"
            app:layout_constraintTop_toBottomOf="@+id/textViewIngredientsList" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>